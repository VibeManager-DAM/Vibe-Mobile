<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Background"
    >

    <ImageView
        android:id="@+id/cardBuy_img"
        android:layout_width="match_parent"
        android:layout_height="595dp"
        android:src="@drawable/evento_image"
        android:scaleType="centerCrop"
        />

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="36dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back"
            android:background="@drawable/bg_oval"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <ImageView
        android:background="@drawable/icon_flecha_atras"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="46dp"
        android:layout_gravity="start"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/bg_degraded_card"
        />

    <FrameLayout
        android:layout_width="377dp"
        android:layout_height="374dp"
        android:layout_gravity="center|bottom"
        android:background="@drawable/bg_degraded"
        >

        <TextView
            android:id="@+id/cardBuy_title"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:text="Mauris pretium orci feugiat urna elementum euismod"
            android:fontFamily="@font/gabarito_semibold"
            android:textSize="24sp"
            android:layout_margin="16dp"
            />
        <TextView
            android:id="@+id/cardBuy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¬50.00"
            android:fontFamily="@font/gabarito_regular"
            android:textSize="20sp"
            android:layout_gravity="end"
            android:layout_marginEnd="38dp"
            android:layout_marginTop="23dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_calendario"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/cardBuy_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday 18 May 2025"
                android:layout_marginStart="34dp"
                android:fontFamily="@font/lato_light"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_reloj"
                android:layout_marginStart="186dp"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/cardBuy_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 PM"
                android:layout_marginStart="204dp"
                android:fontFamily="@font/lato_light"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cap:"
                android:textStyle="bold"
                android:layout_marginStart="284dp"
                android:fontFamily="@font/lato_light"/>
            <TextView
                android:id="@+id/cardBuy_capacidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_marginStart="313dp"
                android:fontFamily="@font/lato_light"/>
        </FrameLayout>

        <View
            android:layout_width="324dp"
            android:layout_height="1dp"
            android:layout_marginTop="150dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_round_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Details"
            android:fontFamily="@font/gabarito_regular"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="170dp"/>
        <TextView
            android:id="@+id/cardBuy_description"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:text="Ut eget turpis laoreet, imperdiet ipsum nec, pellentesque tortor. Duis faucibus ac purus in dictum. Integer quis sollicitudin lectus. Nullam finibus, libero nec tincidunt mollis"
            android:layout_marginTop="200dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardBuy_btn"
            style="@style/CustomButton"
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:text="Reservar espacio"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginBottom="29dp"
            >
        </androidx.appcompat.widget.AppCompatButton>
    </FrameLayout>
</FrameLayout>