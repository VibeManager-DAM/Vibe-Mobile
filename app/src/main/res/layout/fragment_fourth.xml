<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/profilePage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".FourthFragment"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="35dp"
            android:text="Configuración"
            android:fontFamily="@font/gabarito_medium"
            android:textSize="48sp"
            android:textColor="@color/Verde_Oscuro"
            />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/conf_options"
                android:background="@drawable/bg_oval"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>
        <ImageView
            android:background="@drawable/icon_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center|end"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        >
        <EditText
            android:id="@+id/user_nombre"
            android:layout_width="373dp"
            android:layout_height="69dp"
            android:hint="Nombre"
            android:textSize="16sp"
            android:paddingStart="40dp"
            android:layout_gravity="center|top"
            android:background="@drawable/bg_round_txt"
            />
        <EditText
            android:id="@+id/user_correo"
            android:layout_width="373dp"
            android:layout_height="69dp"
            android:hint="Correo"
            android:textSize="16sp"
            android:paddingStart="40dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_round_txt"
            />
        <EditText
            android:id="@+id/user_contrasena"
            android:layout_width="373dp"
            android:layout_height="69dp"
            android:hint="Contraseña"
            android:textSize="16sp"
            android:paddingStart="40dp"
            android:layout_marginTop="200dp"
            android:layout_gravity="center|top"
            android:background="@drawable/bg_round_txt"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="35dp"
            android:src="@drawable/icon_usuario"
            android:alpha="0.5"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="125dp"
            android:layout_marginStart="35dp"
            android:src="@drawable/icon_correo"
            android:alpha="0.5"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="225dp"
            android:layout_marginStart="35dp"
            android:src="@drawable/icon_llave"
            android:alpha="0.5"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_iniciarSesion"
            style="@style/CustomButton"
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="140dp"
            android:text="Guardar"
            android:textSize="20sp"
            android:textAllCaps="false"

            />
    </FrameLayout>


</LinearLayout>