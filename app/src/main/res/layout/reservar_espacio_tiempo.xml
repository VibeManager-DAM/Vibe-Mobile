<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Background"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="595dp"
        android:src="@drawable/evento_image"
        android:scaleType="centerCrop"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/bg_degraded_card"
        />

    <FrameLayout
        android:layout_width="377dp"
        android:layout_height="374dp"
        android:layout_gravity="center|bottom"
        android:background="@drawable/bg_degraded"
        >

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Indique el dia de la reserva"
            android:fontFamily="@font/gabarito_semibold"
            android:textSize="24sp"
            android:layout_margin="16dp"
            />

        <FrameLayout
            android:layout_width="354dp"
            android:layout_height="245dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="top|center"
            android:textSize="20sp"
            android:textAllCaps="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="50dp"
                android:text="Comienza"
                android:fontFamily="@font/lato_light"
                />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/icon_reloj"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="230dp"
                android:text="Finaliza"
                android:fontFamily="@font/lato_light"
                />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/icon_reloj"
                android:layout_marginTop="16dp"
                android:layout_marginStart="211dp"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_startDateTime"
                style="@style/CustomButtonClaro"
                android:layout_width="154dp"
                android:layout_height="205dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:text="11:00 am"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_finalDateTime"
                style="@style/CustomButtonClaro"
                android:layout_width="154dp"
                android:layout_height="205dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="180dp"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:text="7:20 pm"
                />

        </FrameLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reservarEspacio"
            style="@style/CustomButton"
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:text="Reservar espacio"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginBottom="29dp"
            />
    </FrameLayout>
</FrameLayout>