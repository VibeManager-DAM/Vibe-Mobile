<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_item"
    android:layout_width="368dp"
    android:layout_height="318dp"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_gravity="top|center"
    android:background="@drawable/bg_round_card"
    >
    <FrameLayout
        android:layout_width="346dp"
        android:layout_height="181dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:background="@drawable/bg_round_img"
        >
        <ImageView
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/evento_image"
            android:background="@drawable/bg_round_img"
            android:scaleType="centerCrop"
            />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_oval"
            android:layout_margin="13dp"

            >
            <TextView
                android:id="@+id/card_date"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:text="18 May"
                android:textSize="13sp"
                android:gravity="center"
                android:fontFamily="@font/lato_bold"
                />
        </FrameLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/card_title"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/gabarito_regular"
            android:textSize="16sp"
            android:layout_marginStart="19dp"
            android:layout_gravity="start"
            />
        <TextView
            android:id="@+id/card_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/gabarito_regular"
            android:textSize="20sp"
            android:text="â‚¬50.00"
            android:layout_marginStart="81dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/card_btn"
            style="@style/CustomButtonClaroGris"
            android:layout_width="346dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:text="@string/reservar"
            android:textSize="20sp"
            android:textAllCaps="false"
            >
        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

</LinearLayout>