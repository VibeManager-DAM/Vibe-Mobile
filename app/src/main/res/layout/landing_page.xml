<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/landingPage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="368dp"
        android:layout_height="71dp"
        android:background="@drawable/rounded_button"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/Verde_Oscuro"
        >

        <EditText
            android:id="@+id/user_correo"
            android:layout_width="346dp"
            android:layout_height="49dp"
            android:hint="Escriba el evento donde quieras ir..."
            android:textSize="13sp"
            android:paddingStart="50dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_txt"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="35dp"
            android:src="@drawable/icon_busqueda"
            android:alpha="0.5"
            android:scaleType="centerCrop"/>


    </FrameLayout>
</LinearLayout>