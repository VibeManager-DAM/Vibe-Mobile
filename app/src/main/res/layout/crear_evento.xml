<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Background">

    <ImageView
        android:id="@+id/crearEvento_img"
        android:layout_width="match_parent"
        android:layout_height="595dp"
        android:src="@drawable/evento_image"
        android:scaleType="centerCrop"
        />
    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="36dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back"
            android:background="@drawable/bg_oval"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <ImageView
        android:background="@drawable/icon_flecha_atras"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="46dp"
        android:layout_gravity="start"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/bg_degraded_card"
        />

    <FrameLayout
        android:layout_width="377dp"
        android:layout_height="500dp"
        android:layout_gravity="center|bottom"
        android:background="@drawable/bg_degraded"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/cardBuy_title"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:text="Introduzca los datos del evento"
                android:fontFamily="@font/gabarito_semibold"
                android:textSize="24sp"
                />

            <!-- Campos del formulario -->
            <EditText
                android:id="@+id/crearEvento__title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:hint="Título del evento"
                android:paddingStart="20dp"
                android:inputType="textCapWords"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_round_txt"/>

            <EditText
                android:id="@+id/crearEvento__description"
                android:background="@drawable/bg_round_txt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:paddingStart="20dp"
                android:hint="Descripción"
                android:inputType="textMultiLine"
                android:minLines="2"/>

            <EditText
                android:id="@+id/crearEvento__date"
                android:background="@drawable/bg_round_txt"
                android:layout_width="match_parent"
                android:paddingStart="20dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:hint="Fecha (YYYY-MM-DD)"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"/>

            <EditText
                android:id="@+id/crearEvento__time"
                android:background="@drawable/bg_round_txt"
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:hint="Hora (HH:mm:ss)"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"/>

            <EditText
                android:id="@+id/crearEvento__capacity"
                android:background="@drawable/bg_round_txt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:paddingStart="20dp"
                android:hint="Capacidad total"
                android:inputType="number"/>

            <EditText
                android:id="@+id/crearEvento__price"
                android:background="@drawable/bg_round_txt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:paddingStart="20dp"
                android:hint="Precio (€)"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crearEvento__btn"
            style="@style/CustomButton"
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:text="Crear Evento"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginBottom="29dp"
            />
    </FrameLayout>

</FrameLayout>